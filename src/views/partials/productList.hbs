
<div class="w-100 d-flex align-items-center justify-content-center">
  <div class="w-75 d-flex flex-column align-items-center justify-content-center">
    <h1>Estos son los productos disponibles</h1>
<table class="table tablaProductos col-md-4 ">
  <thead>
    <tr>
      <tr class="table-dark">
    {{!-- <th scope="col" class="text-center align-middle">Id</th> --}}
    <th scope="col" class="text-center align-middle"></th>
    <th scope="col" class="text-center align-middle">Nombre</th>
    <th scope="col" class="text-center align-middle">Precio</th>
    <th scope="col" class="text-center align-middle" >Foto</th>
  </tr>
    </tr>
  </thead>
  <tbody id="listadoProductos">
    <form action="/api/cart/{{cart.id}}/productos" method="POST">
      {{#each products}}
        {{#each this}}
          {{#if this}}
            {{#if this.titulo}}
              <tr class="text-center align-middle">
                  {{!-- <th scope="row" class="text-center align-middle">{{_id}}</th> --}}
                  <td class="text-center align-middle">
                    <input name="product" value={{_id}} style="display: none;"/>
                      <button type="submit" class="btn btn-primary btn-sm">
                        Agregar al carrito
                      </button>
                  </td>
                  <td class="text-center align-middle">{{titulo}}</td>
                  <td class="text-center align-middle">$ {{precio}}</td>
                  <td class="text-center align-middle"><img src="{{miniatura}}" alt="{{titulo}}" style="width:3rem"></td>
              </tr>
            {{/if}}
          {{/if}}
        {{/each}}
      {{/each}}
    </form>
  </tbody>
</table>
</div>
</div>
